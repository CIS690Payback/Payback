<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Description"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/txtView_TransactionListItem_description" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:textSize="14sp"
                android:id="@+id/txtView_TransactionListItem_group" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".7"
            android:layout_width="fill_parent"
            android:layout_gravity="right"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="$9999.99"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:id="@+id/txtView_TransactionListItem_owedAmount" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>