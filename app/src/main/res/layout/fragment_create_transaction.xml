<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/txtView_Name"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_Name"
            android:layout_alignBottom="@+id/txtView_Name"
            android:layout_toRightOf="@+id/txtView_Name"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Describe Transaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost:"
            android:id="@+id/txtView_Cost"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/editText_Cost"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:id="@+id/btn_AddTransaction"
            android:layout_marginTop="87dp"
            android:layout_below="@+id/editText_Cost"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText_Cost"
            android:layout_below="@+id/txtView_Name"
            android:layout_alignLeft="@+id/editText_Name"
            android:layout_alignStart="@+id/editText_Name" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_Group"
            android:textSize="40sp"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/editText_Cost"
            android:layout_alignLeft="@+id/editText_Cost"
            android:layout_alignStart="@+id/editText_Cost" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group:"
            android:id="@+id/txtView_Group"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/spinner_Group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</LinearLayout>